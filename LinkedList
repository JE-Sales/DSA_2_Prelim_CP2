public class LinkedList {
	private Node head;

	/*
	 * Method for adding a new node. If the linked list is empty, 
         * the new node will be the head of the list. If not, the LinkedList
	 * will be traversed up to the end of the list, and adds the new node 
	 * at the tail of the linked list.
	 */ 
	public void append(Node node) {
		if (head == null) {
			head = node;
		} else {
			Node currentNode = head;
			while (currentNode.getNext() != null) {
				currentNode = currentNode.getNext();
			}
			currentNode.setNext(node);
		}
	}
	
	/*
	 * Method that returns true if the key was founded on the LinkedList.
	 * If not founded, returns false.
	 */
	public boolean search(int key) {
		Node currentNode = head;

		while (currentNode != null) {
			if (currentNode.getData() == key)
				return true;
			currentNode = currentNode.getNext();
		}

		return false;

	}
	
	
	/*
	 * Method that deletes a key on the LinkedList if the key matches a data 
	 * on the LinkedList. If not, a prompt will be displayed.
	 */
	public void delete(int key) {
		if(this.head == null) {
			System.out.println("The key is not found.");
			return;
		}
		if(this.head.getData() == key) {
			this.head = this.head.getNext();
			System.out.println("The key is successfully deleted.");
			return;
		}
		Node currentNode = head;
		while(currentNode.getNext() != null) {
			if(currentNode.getNext().getData() == key) {
				currentNode.setNext(currentNode.getNext().getNext());
				System.out.println("The key is successfully deleted.");
				return;
			}
			currentNode = currentNode.getNext();
		}
	}
	
	// Method for displaying the contents of the LinkedList
	public void display() {
		Node currentNode = head;
		String str = "";
		while (currentNode != null) {
			str += String.valueOf(currentNode.getData()) + " -> ";
			currentNode = currentNode.getNext();
		}
		if (str != "") {
			str = str.substring(0, str.length() - 4);
		}
		System.out.println(str);
	}
	
	/*
	 * Method that returns true if the head node is null.
	 * If not, returns false.
	 */
	public boolean isEmpty() {
		boolean isEmpty = true;
		if(this.head == null) {
			isEmpty = true;
		}else {
			isEmpty = false;
		}
		return isEmpty;
	}

}
